<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:outlineAmbientShadowColor="@color/card_forecast_backgound_icon"
        android:outlineSpotShadowColor="@color/card_forecast_backgound_icon"
        app:cardCornerRadius="@dimen/card_corner">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#6293C55D" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_service_item_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:text="Serviço:"
                android:textSize="@dimen/card_info"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_service_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textSize="@dimen/card_info"
                app:layout_constraintBottom_toBottomOf="@+id/tv_service_item_name_label"
                app:layout_constraintStart_toEndOf="@+id/tv_service_item_name_label"
                app:layout_constraintTop_toTopOf="@+id/tv_service_item_name_label"
                app:layout_constraintVertical_bias="0.0"
                tools:text="Exemplo de serviço" />

            <TextView
                android:id="@+id/tv_service_item_value_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Valor:"
                android:textSize="@dimen/card_info"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_service_item_name_label"
                app:layout_constraintTop_toBottomOf="@+id/tv_service_item_name_label" />

            <TextView
                android:id="@+id/tv_service_item_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textSize="@dimen/card_info"
                app:layout_constraintBottom_toBottomOf="@+id/tv_service_item_value_label"
                app:layout_constraintStart_toEndOf="@+id/tv_service_item_value_label"
                app:layout_constraintTop_toTopOf="@+id/tv_service_item_value_label"
                tools:text="R$999,99" />

            <TextView
                android:id="@+id/tv_service_item_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="Tempo:"
                android:textSize="@dimen/card_info"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_service_item_value_label"
                app:layout_constraintTop_toBottomOf="@+id/tv_service_item_value_label" />

            <TextView
                android:id="@+id/tv_service_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textSize="@dimen/card_info"
                app:layout_constraintBottom_toBottomOf="@+id/tv_service_item_time_label"
                app:layout_constraintStart_toEndOf="@+id/tv_service_item_time_label"
                app:layout_constraintTop_toTopOf="@+id/tv_service_item_time_label"
                app:layout_constraintVertical_bias="0.0"
                tools:text="Hora" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>