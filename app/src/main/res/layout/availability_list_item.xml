<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:outlineAmbientShadowColor="@color/card_forecast_backgound_icon"
        android:outlineSpotShadowColor="@color/card_forecast_backgound_icon"
        app:cardCornerRadius="@dimen/card_corner">

        <ImageView
            android:id="@+id/iv_availability_backgound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#6293C55D" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_availability_item_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:text="Data:"
                android:textSize="@dimen/card_info"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_availability_item_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textSize="@dimen/card_info"
                app:layout_constraintBottom_toBottomOf="@+id/tv_availability_item_date_label"
                app:layout_constraintStart_toEndOf="@+id/tv_availability_item_date_label"
                app:layout_constraintTop_toTopOf="@+id/tv_availability_item_date_label"
                app:layout_constraintVertical_bias="0.0"
                tools:text="20/08/1993" />

            <TextView
                android:id="@+id/tv_availability_item_starttime_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Hora inÃ­cio:"
                android:textSize="@dimen/card_info"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_availability_item_date_label"
                app:layout_constraintTop_toBottomOf="@+id/tv_availability_item_date_label" />

            <TextView
                android:id="@+id/tv_availability_item_starttime_label_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textSize="@dimen/card_info"
                app:layout_constraintBottom_toBottomOf="@+id/tv_availability_item_starttime_label"
                app:layout_constraintStart_toEndOf="@+id/tv_availability_item_starttime_label"
                app:layout_constraintTop_toTopOf="@+id/tv_availability_item_starttime_label"
                tools:text="18:30" />

            <TextView
                android:id="@+id/tv_availability_item_enttime_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="Hora fim:"
                android:textSize="@dimen/card_info"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_availability_item_starttime_label"
                app:layout_constraintTop_toBottomOf="@+id/tv_availability_item_starttime_label" />

            <TextView
                android:id="@+id/tv_availability_item_enttime_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textSize="@dimen/card_info"
                app:layout_constraintBottom_toBottomOf="@+id/tv_availability_item_enttime_label"
                app:layout_constraintStart_toEndOf="@+id/tv_availability_item_enttime_label"
                app:layout_constraintTop_toTopOf="@+id/tv_availability_item_enttime_label"
                app:layout_constraintVertical_bias="0.0"
                tools:text="20:20" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>